<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- 底部导航选中状态样式 -->
    <style name="BottomNavigationActive">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- 底部导航未选中状态样式 -->
    <style name="BottomNavigationInactive">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- 基础主题 -->
    <style name="Theme.Headlines" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- 确保背景为白色 -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/color_primary</item>
        <item name="android:navigationBarColor">@color/white</item>

        <!-- 移除启动屏效果 -->
        <item name="android:windowSplashScreenAnimatedIcon" tools:ignore="NewApi">@null</item>
        <item name="android:windowSplashScreenBackground" tools:ignore="NewApi">@color/white</item>

        <!-- 避免过度绘制 -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <!-- 自定义按钮样式 -->
    <style name="OrangeButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/color_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="WhiteButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/color_primary</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <!-- 新闻卡片样式 -->
    <style name="NewsCard">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <!-- 顶部标签样式 -->
    <style name="TopTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/color_primary</item>
        <item name="tabSelectedTextColor">@color/color_primary</item>
        <item name="tabTextColor">@color/text_secondary</item>
        <item name="tabIndicatorHeight">3dp</item>
    </style>

    <!-- 夜间模式主题 -->
    <style name="Theme.Headlines.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>