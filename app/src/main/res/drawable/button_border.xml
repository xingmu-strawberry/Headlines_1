<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按钮背景颜色 -->
    <solid android:color="#FF3D00" /> <!-- 设置按钮的背景颜色为红色 -->

    <!-- 按钮边框 -->
    <stroke
        android:width="2dp"
    android:color="#FFFFFF" /> <!-- 设置边框颜色为白色 -->

    <!-- 圆角 -->
    <corners android:radius="4dp" /> <!-- 设置圆角半径 -->

    <!-- 内边距 -->
    <padding
        android:left="10dp"
        android:top="5dp"
        android:right="10dp"
        android:bottom="5dp" />
</shape>
